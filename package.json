  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.17.0",
    "@types/sap__xsenv": "^3.3.2",
    "typescript": "^5.6.0"
